@import "../stars/stars-template.wxss";

.movie-container {
  display: inline-flex;
  flex-direction: column;
  padding: 5rpx 16rpx;
}

.info .pic {
  color: #bbb;
  float: left;
  padding-right: 6rpx;
  margin: 30rpx 10rpx;
}

.pic .img {
  width: 250rpx;
  height: 330rpx;
  margin: 30rpx 5rpx;
  padding-bottom: 20rpx;
  padding-right: 10rpx;
}

.info .right_info {
  margin: 6rpx 0;
  padding: 6rpx 0;
  color: #666;
}

.info {
  width: 100%;
  height: 350rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
}

.background-img {
  width: 100%;
  height: 350rpx;
  -webkit-filter: blur(40rpx);
  -webkit-filter:brightness(0.3);
  -ms-filter: blur(6px);
  -moz-filter: blur(6px);
}

.title {
  font: 28rpx/150% Arial, Helvetica, sans-serif;
  overflow: hidden;
  text-overflow: ellipsis;
  /*white-space: nowrap;*/
}

.detail {
  overflow: hidden;
  margin: 5 rpx 20rpx 20rpx 20rpx;
  padding: 1rpx 20rpx;
}

.slogan {
  font-size: 24rpx;
  color: #1f4ba5;
}

.more {
  float: right;
}

.more-text {
  font-size: 24rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.middle {
  border-bottom: 8rpx outset #99CCFF;
  margin: 50rpx 5rpx 1rpx 5rpx;
}
.middle_1 {
  border-bottom: 8rpx outset #99CCFF;
  margin: 5rpx 5rpx 1rpx 5rpx;
}

.title_split {
  color: #369;
  font: 28rpx/150% Arial, Helvetica, sans-serif;
}

.title_small {
  font: 25rpx/150% Arial, Helvetica, sans-serif;
}

.title_small_role {
  font: 18rpx/150% Arial, Helvetica, sans-serif;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 80px;
  color: #9b9b9b;
  text-align: center;
}

.stars_img {
  width: 130rpx;
  height: 175rpx;
  margin: 20rpx 10rpx;
}

.photos_img {
  width: 225rpx;
  height: 175rpx;
  margin: 20rpx 10rpx;
}

.scroll_item_x {
  display: inline-block;
}

.middle_stars {
  border-bottom: 6rpx double #ccc;
  margin:1rpx 0rpx;
}

.comment {
  display: flex;
  flex-flow: row;
  border-bottom: 2rpx dashed #ccc;
  margin: 20rpx 20rpx;
  padding: 3rpx 5rpx;
}

.avatar {
  height: 100%;
}

.avatar_img {
  margin-right: 15rpx;
  width: 80rpx;
  height: 80rpx;
}

.comment_contents {
  font: 25rpx/150% Arial, Helvetica, sans-serif;
  padding: 0rpx 10rpx 1rpx 1rpx;
}

.content {
  padding: 1rpx 1rpx;
}

.star_bg {
  margin: 0rpx 10rpx;
  width: 100rpx;
  height: 20rpx;
  background-image: url('data:image/png;base64,');
  background-size: contain;
}

.star_over {
  height: 20rpx;
  background-image: url('data:image/png;base64,');
  background-size: contain;
}

.top_content{
  display: flex;
  flex-flow: row;
}


.send_bdy_button{
  color:#369; 
  font: 30rpx/150% Arial, Helvetica, sans-serif;

}
